<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_list_action" model="ir.actions.act_window">
        <field name="name">Task List</field>
        <field name="res_model">cooperative_shop.task</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first task
            </p>
        </field>
    </record>
    <menuitem
            name="Cooperative Shop"
            id="menu_cooperative_shop"
            sequence="1"
            web_icon="cooperative_shop,static/description/icon.png"
    >
        <menuitem id="menu_cooperative_shop_sub" name="Library" sequence="1">
            <menuitem id="menu_cooperative_shop_tasks" name="Tasks" sequence="2" action="cooperative_shop.task_list_action"/>
        </menuitem>
    </menuitem>
</odoo>
