<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_view_form" model="ir.ui.view">
        <field name="name">cooperative_shop.task.form</field>
        <field name="model">cooperative_shop.task</field>
        <field name="arch" type="xml">
            <form string="Task View">
                <header></header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="start_time"/>
                        <field name="stop_time"/>
                    </group>
                    <group>
                        <field name="task_type"/>
                        <field name="occurrences"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="task_view_tree" model="ir.ui.view">
        <field name="name">cooperative_shop.task.view</field>
        <field name="model">cooperative_shop.task</field>
        <field name="arch" type="xml">
            <tree string="Task List">
                <field name="name"/>
                <field name="start_time"/>
                <field name="stop_time"/>
                <field name="task_type"/>
                <field name="occurrences"/>
            </tree>
        </field>
    </record>
    <record id="task_view_search" model="ir.ui.view">
       <field name="name">cooperative_shop.task.search</field>
       <field name="model">cooperative_shop.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <group expand="0" string="Group By">
                   <filter name="groupby_task_type" string="Task Type" context="{'group_by': 'task_type'}"/>
                </group>
            </search>
       </field>
    </record>
</odoo>