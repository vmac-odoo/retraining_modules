<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="book_view_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book View">
                <header></header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <separator string="Author"/>
                        <field name="author"/>
                        <separator string="Publish Information"/>
                        <field name="publisher"/>
                        <field name="publish_date"/>
                    </group>
                    <group>
                        <separator string="Book"/>
                        <field name="isbn"/>
                        <field name="format"/>
                        <field name="genre"/>
                        <field name="edition"/>
                        <field name="price"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Summary">
                            <field name="summary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Book List">
                <field name="name"/>
                <field name="genre"/>
                <field name="author"/>
                <field name="publisher"/>
                <field name="publish_date"/>
                <field name="format"/>
                <field name="isbn"/>
                <field name="edition"/>
                <field name="price"/>
            </tree>
        </field>
    </record>
    <record id="book_view_search" model="ir.ui.view">
       <field name="name">library.book.search</field>
       <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="format"/>
                <field name="author"/>
                <field name="isbn"/>
                <filter string="Inactive" name="filter_active" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Publish Date" name="group_publish_date" context="{'group_by':'publish_date'}"/>
                    <filter name="groupby_genre" string="Genre" context="{'group_by': 'genre'}"/>
                </group>
            </search>
       </field>
    </record>
</odoo>